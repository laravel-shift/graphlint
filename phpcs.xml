<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="GraphLint">
    <description>GraphLint Coding Standard</description>

    <file>./src</file>
    <file>./tests</file>
    <file>./config</file>

    <arg name="colors"/>
    <arg name="parallel" value="75"/>

    <rule ref="WorksomeSniff"/>
    <rule ref="PSR1.Files.SideEffects">
        <exclude-pattern>/tests/Pest\.php</exclude-pattern>
    </rule>
</ruleset>
